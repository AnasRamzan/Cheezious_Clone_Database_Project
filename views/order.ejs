<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="/css/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="wrapper" >
        <div class="ui massive menu">
            <div class="ui container">
                <div class="header item">
                   <a href="/" class="link">Home</a>
                  </div>
                  <a href="/order" class="item">
                    Orders
                  </a>
                  <a href="/customer" class="item">
                    Customer
                  </a>
                  <a href="/pasta" class="item">
                    Pasta
                  </a>
                  <a href="/sandwitch" class="item">
                    Sandwitches
                  </a>
                  <a href="/burger" class="item">
                    Burger
                  </a>
                  <a href="/pizza" class="item">
                    Pizza
                  </a>
                  <a href="/starter" class="item">
                    Starters
                  </a>
                  <a href="/local" class="item">
                    Local
                  </a>
                  <a href="/sooper" class="item">
                    Sooper
                  </a>
                  <a href="/sideOrder" class="item">
                    Side Orders
                  </a>
                </div>
            </div>
        </div>
            <br>
            <br>
            <br>
            <p class="title">Orders</p>
            <div class="ui container">
                <form action="/add_order" class="ui form" method="POST">
                    <div class="ui four fields">
                        <div class="field">
                            <label for="name" class="ui header red">Enter the Customer name</label>
                            <input type="text" name="customer_name" placeholder="Enter Customer Name">
                        </div>
                        <div class="field">
                            <label for="players" class="ui header red">Enter the Address</label>
                            <input type="text" name="address" placeholder="Enter Customer Address">
                        </div>
                        <div class="field">
                            <label for="coach" class="ui header red">Enter Name of Ordered Item</label>
                            <input type="text" name="item" placeholder="Enter Item Ordered">
                        </div>
                        <div class="field">
                            <label for="coach" class="ui header red">Enter Date</label>
                            <input type="text" name="date" placeholder="Enter Date">
                        </div>
                    </div>
                    <div class="ui fluid field">
                        <input type="submit" value ="Submit" class="ui button red fluid">
                    </div>
                </form>
                <br><br>
                <table class="ui red table">
                    <thead>
                        <th>Customer Name</th>
                        <th>Address</th>
                        <th>Item Ordered</th>
                        <th>Date</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                        
                        <% orders.forEach((order)=>{ %>
                            <tr>
                                <td><%- order.Customer %></td>
                                <td><%- order.Address %></td>
                                <td><%- order.Item_Ordered %></td>
                                <td><%- order.Date %></td>
                                <td><a class="ui green button" href="/edit_order/<%= order._id %>"><i class="edit outline icon"></i></a></td>
                                <td><a class="ui red button" href="/delete_order/<%= order._id %>"><i class="minus icon"></i></a></td>
    
                            </tr>
                          <% }); %>
                    </tbody>
                </table>
           
        
    <script src="/js/semantic.min.js"></script>
</body>
</html>